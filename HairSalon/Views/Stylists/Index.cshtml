@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists List</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists in your list at this moment.</h3>
}
else
{
   <h4>Click on stylist name to see stylist specialties and matching clients.</h4>
   <ul>
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
    </ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new stylist", "Create")</p>

