@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists List</h1>

<div class="container-stylists-index">
@if (@Model.Count == 0)
{
  <h3>No stylists in your list at this moment.</h3>
}
else
{
  <div class="container-stylists-main">
   <h4>Click on stylist name to see stylist specialties and matching clients.</h4>

   <ul class="stylists-container-list">
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
    </ul>
  </div>

}
<div class="container-stylists-links">
@Html.ActionLink("Home", "Index", "Home",  null, new { @class = "link"})
@Html.ActionLink("Add new stylist", "Create", null, null, new { @class = "link"})
</div>


