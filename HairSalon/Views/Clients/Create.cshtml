@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>



@if(@ViewData["NoStylist"] == "noStylist")
{
  <p><strong>NOTE:</strong>You need to have at least one stylist in your stylist list to add an client.</p>
  <p>You can click a @Html.ActionLink("here", "Create", "Stylists") to add new stylist in the list.</p>

}
else
{
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client" class="btn btn-primary"/>
}
}


<p>@Html.ActionLink("Back to home", "Index", "Home")</p>